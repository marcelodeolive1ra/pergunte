<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:id="@+id/respostas_layout">

        <TextView
            android:id="@+id/label_respostas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="6dp"
            android:maxLines="1"
            android:paddingEnd="4dp"
            android:textColor="#000000"
            android:textSize="12sp"
            tools:text="Respostas" />

        <TextView
            android:id="@+id/respostas_numero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_respostas"
            android:layout_alignStart="@+id/label_respostas"
            android:layout_alignEnd="@+id/label_respostas"
            android:gravity="end"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="6dp"
            android:maxLines="1"
            android:paddingEnd="4dp"
            android:textColor="#000000"
            android:textSize="12sp"
            tools:text="##" />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/materia_list_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/respostas_layout">

        <TextView
            android:id="@+id/pergunta_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:maxLines="2"
            tools:text="Title"
            />

        <TextView
            android:id="@+id/pergunta_list_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pergunta_list_title"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="14sp"
            tools:text="Subtitle"
            />

    </RelativeLayout>

</RelativeLayout>
